<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--AppTheme-->
    <style name="Theme.DesignTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--底部导航栏LinearLayout样式-->
    <style name="AppBottomMainLlStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--底部导航栏文本样式-->
    <style name="AppBottomMainTvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/app_main_bottom_tv_color</item>
    </style>

    <!--首页轮播图下方菜单样式-->
    <style name="AppHomeHeaderTvMenuStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textColor">@color/app_color_tv_def</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
